<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ConstrainLayout">



    <Button
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:text="<BACK" />


    <Button
        android:layout_width="240dp"
        android:layout_height="70dp"
        android:text="Influenza"
        tools:layout_editor_absoluteX="88dp"
        tools:layout_editor_absoluteY="0dp" />

    <Button
        android:id="@+id/button"
        android:layout_width="96dp"
        android:layout_height="70dp"
        android:text="[I]"
        tools:layout_editor_absoluteX="320dp"
        tools:layout_editor_absoluteY="0dp" />

    <EditText
        android:id="@+id/campo_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:nextFocusRight="@+id/campo_2"
        android:singleLine="true"
        android:text="Surname"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="97dp" />

    <EditText
        android:id="@+id/campo_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Given Name(S)"
        android:nextFocusLeft="@+id/campo_1"
        android:singleLine="true"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="204dp" />

    <EditText
        android:id="@+id/campo_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Date of Birth"
        android:nextFocusRight="@+id/campo_3"
        android:singleLine="true"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="299dp" />

    <EditText
        android:id="@+id/campo_4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Gender"
        android:nextFocusLeft="@+id/campo_3"
        android:singleLine="true"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="398dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="360dp"
        android:layout_height="43dp"
        android:text="             DD               /                MM          /             YYY"
        tools:layout_editor_absoluteX="29dp"
        tools:layout_editor_absoluteY="344dp" />

    <RadioGroup
        android:id="@+id/sexo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/masculino"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp"
            android:layout_marginTop="110dp"
            android:checked="true"
            android:text="Masculino" />

        <RadioButton
            android:id="@+id/femenino"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="110dp"
            android:checked="false"
            android:text="Femenino" />
    </RadioGroup>



    <EditText
        android:id="@+id/campo_5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Address"
        android:nextFocusLeft="@+id/campo_4"
        android:singleLine="true"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="507dp" />


</androidx.constraintlayout.widget.ConstraintLayout>